<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp"
                android:elevation="@dimen/_5sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_14sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp">

                    <RelativeLayout
                        android:id="@+id/llInfo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivCustomer"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:src="@drawable/ic_place_holder" />


                        <TextView
                            android:id="@+id/tvWorkerName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_toEndOf="@id/ivCustomer"
                            android:fontFamily="@font/opensans_semi_bold"
                            android:gravity="center_vertical"
                            android:singleLine="true"

                            android:textColor="@color/cusCol"
                            android:textSize="@dimen/_13sdp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivEdit"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_edit" />

                    </RelativeLayout>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llDetailInfo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_below="@id/llInfo"

                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/labelRole"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".2"
                            android:fontFamily="@font/opensans_regular"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="Role: "
                            android:textColor="@color/locationCol"
                            android:textSize="@dimen/_12sdp" />


                        <TextView
                            android:id="@+id/tvWorkerRole"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".8"
                            android:fontFamily="@font/opensans_semi_bold"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:textColor="@color/cusCol"
                            android:textSize="@dimen/_12sdp" />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llDetailEmail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_below="@id/llDetailInfo"

                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/labelEmail"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".2"
                            android:fontFamily="@font/opensans_regular"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="Email: "
                            android:textColor="@color/locationCol"
                            android:textSize="@dimen/_12sdp" />


                        <TextView
                            android:id="@+id/tvWorkerEmail"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".8"
                            android:fontFamily="@font/opensans_semi_bold"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:textColor="@color/cusCol"
                            android:textSize="@dimen/_12sdp" />


                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llWorkerHour"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_below="@id/llDetailEmail"

                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/labelHour"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".2"
                            android:fontFamily="@font/opensans_regular"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="Rate: "
                            android:textColor="@color/locationCol"
                            android:textSize="@dimen/_12sdp" />


                        <TextView
                            android:id="@+id/tvWorkerHourly"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".8"
                            android:fontFamily="@font/opensans_semi_bold"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:textColor="@color/cusCol"
                            android:textSize="@dimen/_12sdp" />


                    </androidx.appcompat.widget.LinearLayoutCompat>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>


    </RelativeLayout>
</layout>